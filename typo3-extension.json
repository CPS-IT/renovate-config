{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": [
		"Use this preset for TYPO3 extensions."
	],
	"composerIgnorePlatformReqs": [
		"ext-intl"
	],
	"rangeStrategy": "widen",
	"packageRules": [
		{
			"matchPackageNames": [
				"typo3/cms-**",
				"!typo3/cms-cli",
				"!typo3/cms-composer-installers"
			],
			"groupName": "TYPO3 CMS",
			"fetchChangeLogs": "off"
		}
	]
}

{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": [
		"Use this preset to enable updates in GitLab CI files only."
	],
	"extends": [
		":disableRenovate"
	],
	"packageRules": [
		{
			"matchManagers": [
				"gitlabci",
				"gitlabci-include"
			],
			"extends": [
				":enableRenovate"
			]
		}
	]
}

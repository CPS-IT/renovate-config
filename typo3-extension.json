{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": [
		"Use this preset for TYPO3 extensions."
	],
	"composerIgnorePlatformReqs": [
		"ext-intl"
	],
	"rangeStrategy": "widen",
	"packageRules": [
		{
			"matchPackagePrefixes": [
				"typo3/cms-"
			],
			"excludePackageNames": [
				"typo3/cms-cli",
				"typo3/cms-composer-installers"
			],
			"groupName": "TYPO3 CMS",
			"fetchReleaseNotes": false
		}
	]
}
